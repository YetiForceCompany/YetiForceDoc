root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
quote_type = single

[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.js]
indent_style = tab
indent_size = 4

[*.ts]
indent_style = tab
indent_size = 4

[*.tsx]
indent_style = tab
indent_size = 4

[*.css]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4
